<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="@color/BackgroundLogin"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_dialog_create_title"
        android:layout_marginTop="20dp"
        android:text="创建图集"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_title_tag"
        android:hint="图集名称"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        style="@style/login_edit_line"
        />
    <EditText
        android:id="@+id/et_title_pwd"
        android:hint="密码(可选)，不填则没有密码"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        style="@style/login_edit_line"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_create_tag"
            android:text="创建"
            android:textColor="@color/White"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_cancel_tag"
            android:text="取消"
            android:textColor="@color/White"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_button_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
