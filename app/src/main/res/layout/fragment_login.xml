<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/BackgroundLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_marginTop="60dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_login_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        app:siBorderWidth="2dp"
        app:siBorderColor="@color/Line_White_30"
        android:scaleType="fitXY"
        />
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/et_login_user"
        android:hint="type your account here"
        style="@style/login_edit_line"
        android:drawableLeft="@drawable/icon_login_user"
        />
    <EditText
        android:id="@+id/et_login_pwd"
        android:hint="type your password here"
        android:inputType="textPassword"
        style="@style/login_edit_line"
        android:drawableLeft="@drawable/icon_login_password"
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/tv_login_forget"
        android:text="Forgot Password？"
        android:layout_gravity="right"
        android:textColor="@color/FAB"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_login_sign"
        android:layout_marginTop="20dp"
        android:text="SING IN"
        style="@style/login_button" />
    <TextView
        android:text="Don't have account？"
        android:textSize="16sp"
        android:textColor="@color/White"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_login_register"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="REGISTER"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
